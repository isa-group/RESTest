		<mockito.version>3.7.7</mockito.version>
		<sonar.projectKey>isa-group_RESTest</sonar.projectKey>
		<sonar.organization>isa-group</sonar.organization>
		<sonar.host.url>https://sonarcloud.io</sonar.host.url>
		<argLine />
	</properties>

